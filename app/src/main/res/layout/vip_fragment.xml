<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vip_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvVipTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BallionMusic VIP"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvVipDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Music with no interruptions\nUnlimited music\nBackground playback\nBest audio quality"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="4dp"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvVipTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnBuyRenew"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:textAllCaps="false"
        android:backgroundTint="@color/blue_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvVipDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvVipStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Become VIP for 29 UAH/month"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuyRenew"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
